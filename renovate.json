{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)"],

  "platform": "github",
  "baseBranches": ["main"],
  "branchPrefix": "renovate/",
  "labels": ["ðŸ“¦ dependencies"],
  "prCreation": "immediate",
  "automerge": false,
  "prHourlyLimit": 1,
  "prConcurrentLimit": 1,
  "repositories": [
    "coffmark/Renovate-iOS-sample"
  ],
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "ignorePaths": [
    "XcodeGen",
    "Pods"
  ],

  "dependencyDashboard": true,
  "onboarding": true,
  "requireConfig": "required",
  "reviewers": [
    "coffmark"
  ],
  "ignoreDeps": [],
  "vulnerabilityAlerts":{
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "RxSwift",
      "managers": ["cocoapods"],
      "packageNames": [
        "RxSwift",
        "RxCocoa"
      ]
    }
  ]
}